<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane prefHeight="400.0" prefWidth="600.0" styleClass="trainMap" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.po.controller.DashboardControler">
   <Pane fx:id="mapContainer" prefHeight="200.0" prefWidth="200.0" />

    <!-- Top-right button -->
    <HBox fx:id="panelLayout" alignment="BOTTOM_RIGHT" pickOnBounds="false" prefWidth="100.0" translateX="300">

        <Button fx:id="showPanel" alignment="BOTTOM_RIGHT" mnemonicParsing="false" prefWidth="60.0"  text="Data" />

        <VBox alignment="TOP_CENTER" prefWidth="300" styleClass="sidePanel">
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" styleClass="sideText" text="Map Settings" StackPane.alignment="CENTER" />

         <ChoiceBox value="Select operation" styleClass="scrollSelect" prefWidth="150.0">
             <items>
                 <FXCollections fx:factory="observableArrayList">
                     <String fx:value="Add station" />
                     <String fx:value="Add neighbor" />
                     <String fx:value="Add route" />
                     <String fx:value="JavaScript" />
                 </FXCollections>
             </items>
         </ChoiceBox>
        </VBox>

    </HBox>

</StackPane>
